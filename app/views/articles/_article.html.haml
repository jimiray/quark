.col-sm-4
  %article
    .image
      %img.img-responsive{src: article.image}
    .category
      = link_to article.category.name, category_path(article.category)
    = article.title_link
    .meta
      = article.posted_by
      \/
      = article.published_date
      = article.preview
      /article_preview(@articles.first)
    .actions
      .pull-left
        = article.read_button
      .pull-right
        %a{href: '#', class: 'social_solid'}
          %span{class: 'fa fa-facebook'}
        %a{href: '#', class: 'social_solid'}
          %span{class: 'fa fa-twitter'}
        %a{href: '#', class: 'social_solid'}
          %span{class: 'fa fa-google-plus'}
